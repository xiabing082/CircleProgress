<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xls.circleprogress.MainActivity">


    <com.xls.library.CircleProgressView
        android:id="@+id/my_circle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:arcWidth="4dp"
        app:startAngle="30"
        app:centerTextSize="14sp"
        app:maxValue="500"
        />


    <Button
        android:id="@+id/btn_moc_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="模拟下载"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="随机进度"
        app:layout_constraintLeft_toRightOf="@id/btn_moc_download"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_moc_download"
        android:layout_marginBottom="20dp"/>

</android.support.constraint.ConstraintLayout>
